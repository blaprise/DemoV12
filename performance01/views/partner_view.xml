<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="partner_view_performance">
            <field name="name">partner.view.performance</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">

                <button name="toggle_active" position="before">
                    <button name="activities_detail"
                            type="object" class="oe_stat_button"  icon="fa-star">
                        <field string="Activities" name="activity_count" widget="statinfo"/>
                    </button>
                </button>

                <notebook position="before">
                    <group attrs="{'invisible': [('company_type','!=','company')]}" col="4">
                        <field name="partner_type"/>
                        <field name="region_ids" widget="many2many_tags"/>

                    </group>

                    <group attrs="{'invisible': [('company_type','!=','company')]}" col="4">
                        <field name="establishment_id"
                               attrs="{'invisible': [('partner_type','not in',('operator','industrial','chain'))]}"/>
                        <field name="meal_id"
                               attrs="{'invisible': [('partner_type','not in',('operator','industrial','chain'))]}"/>
                        <field name="business_id"
                               attrs="{'invisible': [('partner_type','not in',('operator','industrial','chain'))]}"/>
                        <field name="distributor_ids" widget="many2many_tags"
                               attrs="{'invisible': [('partner_type','not in',('operator','industrial','chain'))]}"/>
                        <field name="operator_ids" widget="many2many_tags"
                               attrs="{'invisible': [('partner_type','not in',('operator','industrial','chain'))]}"/>
                    </group>

                    <group attrs="{'invisible': [('company_type','!=','company')]}" col="4">
                        <field name="supply_id" attrs="{'invisible': [('partner_type','!=','distributor')]}"/>
                        <field name="group_ids" widget="many2many_tags"
                               attrs="{'invisible': [('partner_type','!=','distributor')]}"/>
                    </group>

                </notebook>
            </field>
        </record>

        <!-- Partner Regions -->
        <record id="view_partner_region_view_tree" model="ir.ui.view">
            <field name="name">partner.region.view.tree</field>
            <field name="model">partner.region</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_view_partner_regions" model="ir.actions.act_window">
            <field name="name">Regions</field>
            <field name="res_model">partner.region</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_partner_region_view_tree"/>
        </record>

